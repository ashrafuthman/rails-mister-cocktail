

  <div class="container">
    <div class="row">
        <% @cocktails.each do |c| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
           <div class="card"
           style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url(<%= c.photo %>)">
            <div class="card-description">
              <h2><%= link_to c.name, cocktail_path(c), class: 'card_name' %></h2>
            </div>
          </div>
        </div>
        <% end %>
    </div>
</div>





